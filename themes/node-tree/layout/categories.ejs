<%
	const category = {
		 en: {
            title: "Category",
            subtitle: `There is currently a total of ${ site.categories.data.length } ${ site.categories.data.length > 1 ? "categories" : "category" }`,
         },
		 zh: {
            title: "分类",
            subtitle: `目前共计 ${ site.categories.data.length } 个分类`,
         },
	};

	const language = config.language ? config.language : "en";
%>

<h1 id="article-title">
	<i class="fa fa-folder-open" aria-hidden="true"></i><%- category[language].title %>
</h1>
<h2 id="article-title">
	<%- category[language].subtitle %>
</h2>

<div id="article-content">
	<ul>
      <% for (var j=0; j < site.categories.data.length; j++) { %>
          <% if (site.categories.data[j] && site.categories.data[j].name) { %>
            <li class="menu-item">
                <span>
                    <a href="/<%- site.categories.data[j].path %>"><%- site.categories.data[j].name %>(<%- site.categories.data[j].length %>)</a>
                </span>
            </li>
          <% } %>
      <% } %>
	</ul>
</div>