<%
	const menuItems = {
		about: { en: "About", zh: "关于" },
		tag: { en: "Tag", zh: "标签" },
		category: { en: "Category", zh: "分类" }
	};

	const language = config.language ? config.language : "en";
%>

<header id="header">
	<a id="title" href="<%= url_for() %>" class="log<div class=""></div>
		<img id="logo" src="<%= url_for() %>favicon-white.ico" alt="logo"/>
		<%- config.title %>
	</a>

	<ul id="menu">
		<li class="menu-item">
			<a href="/about" class="menu-item-link"><%- menuItems.about[language] %></a>
		</li>
		<% if (theme.menu.tag.enable){ %>
		<li class="menu-item">
			<a href="/tags" class="menu-item-link"><%- menuItems.tag[language] %></a>
		</li>
		<% } %>
		<% if (theme.menu.category.enable){ %>
		<li class="menu-item">
			<a href="/categories" class="menu-item-link"><%- menuItems.category[language] %></a>
		</li>
		<% } %>
		<li class="menu-item">
			<a href="https://github.com/<%= theme.github %>" class="menu-item-link" target="_blank">
				<i class="fa fa-github fa-2x"></i>
			</a>
		</li>
		<li class="menu-item dark-mode">
			<a href="#" class="menu-item-link">
				<i class="fa fa-moon-o fa-2x"></i>
			</a>
		</li>
	</ul>
</header>